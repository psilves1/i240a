#include <iostream>
#include <vector>
#include <fstream>
#include <cstdlib>

int main(int argc, char *argv[]){

  //ADD A USAGE MESSAGE

  auto args = std::vector<std::string>(&argv[0], &argv[argc]);

  std::string::size_type endIndex;
  const int MAX_N_WORDS =  std::stoi(args.at(1), &endIndex);
  if(!(endIndex == args.at(1).length())){
    std::cout << "Please use a proper integer for MAX_N_WORDS" << std::endl;
  }

  std::cout << MAX_N_WORDS << std::endl;
  
  //Figure out how to add more than 1 file later
  std::ifstream f (argv[4]);

  if(!f.is_open()){//if the file isn't open it will fail
    std::cout<<"Could not open the file"<<std::endl;
  }
  else{
    std::string word;

    f >> word;
    
    std::cout<< word <<std::endl;
  }

  
  return 0;
}
